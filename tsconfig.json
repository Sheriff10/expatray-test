{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "src/@types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "allowArbitraryExtensions": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["src/@types/express.d.ts"]
}
